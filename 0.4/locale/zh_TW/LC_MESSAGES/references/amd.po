"    --ipc=host \\\n"
"    --env \"HF_TOKEN=<secret>\" \\\n"
"    sglang_image \\\n"
"    python3 -m sglang.launch_server \\\n"
"    --model-path meta-llama/Meta-Llama-3.1-8B-Instruct \\ # <- here\n"
"    --tp 8 \\\n"
"    --trust-remote-code \\\n"
"    --host 0.0.0.0 \\\n"
